#!/bin/bash
#
# Script to help template new files.
# Also see $TEMPLATE_DIR

# Set colours
NC='\033[0m'
RED='\033[0;31m'

TEMPLATE_DIR=$HOME/templates
TEMPLATE_LIST=$(ls "$TEMPLATE_DIR")

# Helpers
error() {
  printf "${RED}ERROR ${NC}- $*\n" >&2
}

usage() {
  echo
  echo "Usage: template LANGUAGE FILE"
  echo
  echo "e.g. template bash new-script.sh"
  echo
  echo "Language options:"
  echo
  echo "${TEMPLATE_LIST}"
  echo
}


if [[ $# -ne 2 ]] ; then
    usage
    exit 0
fi

if echo "${TEMPLATE_LIST}" | grep -qE "^${1}$"; then
  cp -i "${TEMPLATE_DIR}/$1" "$2"
else
  echo
  error "Invalid option"
  usage
  exit 1
fi
